# Next.js App Environment Variables (example)

# Supabase (Client)
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-local-anon-key

# Supabase (Server-only)
# Note: Never expose this in client code
SUPABASE_SERVICE_ROLE_KEY=your-local-service-role-key

# Zero (Rocicorp) local cache
# Start cache: pnpm zero:start (prints URL)
NEXT_PUBLIC_ZERO_URL=http://localhost:4243
# Feature flag to enable Zero-backed Todos UI
NEXT_PUBLIC_USE_ZERO=false

# Optional: Monitoring
NEXT_PUBLIC_AXIOM_DATASET=supserscale_dev
NEXT_PUBLIC_AXIOM_TOKEN=
SENTRY_DSN=
