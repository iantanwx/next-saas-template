{
  "name": "superscale",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter=@superscale/web",
    "dev:web": "pnpm --filter=@superscale/web dev",
    "dev:email": "pnpm --filter=@superscale/email dev",
    "zero:start": "pnpm --filter=@superscale/zero zero:start",
    "zero:generate": "pnpm --filter=@superscale/zero zero:generate",
    "supabase:start": "pnpm --filter=@superscale/crud supabase:start",
    "supabase:stop": "pnpm --filter=@superscale/crud supabase:stop",
    "supabase:db:push": "pnpm --filter=@superscale/crud supabase db push",
    "supabase:db:reset": "pnpm --filter=@superscale/crud supabase db reset",
    "drizzle:generate": "pnpm --filter=@superscale/crud drizzle:gen",
    "electric:up": "pnpm --filter=@superscale/crud electric:up",
    "electric:down": "pnpm --filter=@superscale/crud electric:down",
    "electric:logs": "pnpm --filter=@superscale/crud electric:logs",
    "build:web": "pnpm --filter=@superscale/web build",
    "test:integration": "pnpm --filter=@superscale/web test:integration",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@10.14.0",
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "turbo": "^2.5.5"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@rocicorp/zero",
      "@rocicorp/zero/pg",
      "@rocicorp/zero-sqlite3",
      "@sentry/cli",
      "@swc/core",
      "@tailwindcss/oxide",
      "esbuild",
      "protobufjs",
      "sharp",
      "supabase"
    ]
  }
}
